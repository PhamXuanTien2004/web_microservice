		{
			"name": "0. Setup - Login Tests",
			"item": [
				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status 200\", () => {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"const body = pm.response.json();",
									"",
									"pm.test(\"Response has access_token\", () => {",
									"    pm.expect(body.data).to.have.property('access_token');",
									"});",
									"",
									"pm.test(\"Role is user\", () => {",
									"    pm.expect(body.data.user.role).to.equal('user');",
									"});",
									"",
									"// Save token to collection variable",
									"if (body.data.access_token) {",
									"    pm.collectionVariables.set(\"user_token\", body.data.access_token);",
									"    console.log(\"✅ User token saved\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"john_doe\",\n    \"password\": \"Password123!\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/api/auth/login",
